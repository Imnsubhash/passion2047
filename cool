<script>
  let selectedWord = null;
  let lastSelectedNode = null;

  function selectWord(node, word) {
    selectedWord = word;
    if (lastSelectedNode) lastSelectedNode.classList.remove("selected");
    node.classList.add("selected");
    lastSelectedNode = node;
  }

  function openSearch(platform) {
    if (!selectedWord) { alert("Please select a word first!"); return; }
    let url = "";
    if (platform === "googleImages") url = "https://www.google.com/search?tbm=isch&q=" + encodeURIComponent(selectedWord);
    else if (platform === "youtube") url = "https://www.youtube.com/results?search_query=" + encodeURIComponent(selectedWord);
    else if (platform === "x") url = "https://x.com/search?q=" + encodeURIComponent(selectedWord);
    else if (platform === "googleNews") url = "https://news.google.com/search?q=" + encodeURIComponent(selectedWord);
    else if (platform === "wikipedia") url = "https://en.wikipedia.org/wiki/" + encodeURIComponent(selectedWord);
    window.open(url, "_blank");
  }

  // Comment Popup
  function openCommentPopup() {
    if (!selectedWord) { alert("Please select a word first!"); return; }
    document.getElementById("popupTitle").innerText = "Comment on: " + selectedWord;
    document.getElementById("commentText").value = "";

    let savedNick = localStorage.getItem("nickname");
    document.getElementById("nickname").value = savedNick ? savedNick : "";

    document.getElementById("commentPopup").style.display = "flex";
  }

  function closeCommentPopup() {
    document.getElementById("commentPopup").style.display = "none";
  }

  function submitComment() {
    let comment = document.getElementById("commentText").value.trim();
    let nickname = document.getElementById("nickname").value.trim();

    if (!comment) { alert("Please write something."); return; }
    if (!nickname) { alert("Please enter a nickname."); return; }

    localStorage.setItem("nickname", nickname);

    let timestamp = new Date().toLocaleString();

    let data = {
      word: selectedWord,
      comment: comment,
      timestamp: timestamp,
      nickname: nickname
    };

    fetch("https://script.google.com/macros/s/AKfycbzPYgN_YifSUcTuUURXPyurDIaPmjc5mPBerOyIrg0kkzJh6up1qpMClNLr2KwIk245/exec", {
      method: "POST",
      mode: "no-cors",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    });

    alert("Your comment has been saved successfully!");
    closeCommentPopup();
  }
</script>
